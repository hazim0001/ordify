<div class="d-flex">
  <div class="col-2">
    <div class="mt-5">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <% icons = ["fas fa-mug-hot", "fas fa-hamburger","fas fa-hotdog", "fas fa-beer", "fas fa-fish" ] %>
        <% counter = 0 %>
      <% @categories.each do |category| %>
        <li class="nav-item w-75" role="presentation">
          <a class="nav-link mb-3 text-center category-pill py-2" id="pills-<%= category.id %>-tab" data-toggle="pill" href="#pills-<%= category.id %>" role="tab" aria-controls="pills-home" aria-selected="true">
            <div class="d-flex align-items-center">
              <i class="<%= icons[counter] %> back-gray mr-3"></i><span><%= category.title.capitalize %></span>
            </div>
          </a>
        </li>
        <% counter += 1 %>
      <% end %>
      </ul>
    </div>
  </div>
  <div class="col-7">
    <div class="tab-content mt-5" id="pills-tabContent">
        <% @categories.each do |category| %>
        <div class="tab-pane fade show " id="pills-<%= category.id %>" role="tabpanel" aria-labelledby="pills-<%= category.id %>-tab">
          <div class="d-flex flex-wrap">
            <% category.menu_items.each do |menu_item| %>
            <div class="card m-2" style="width: 16rem;">
              <img src="..." class="card-img-top" alt="...">
              <div class="card-body">
                <h4><%= menu_item.title %></h4>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
  <div class="col-3">
    <div class="checkout mt-5" style="background-color: gray; height: 500px;">

    </div>
  </div>
</div>
