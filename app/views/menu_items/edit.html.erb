<div class="container mt-5 p-5 shadow bg-white" style="border-radius: 60px">
  <div class="row">
    <div class="col-8 mx-auto">
      <%= simple_form_for [@restaurant, @menu_item], url: restaurant_menu_item_path(@restaurant) do |f| %>
        <div class="row g-3">
          <div class="col-6">
            <%= f.input :title %>
          </div>
          <div class="col-6 ">
            <%= f.input :item_price %>
          </div>
        </div>
        <%= f.input :description, as: :text %>
        <%= f.input :active, as: :boolean, hint: 'Inactive to hide.', input_html: { class: "toggle" }  %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, class:"form-control" %>
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= link_to 'Cancel',categories_path, class:"btn btn-outline-secondary h-25" %>
          <%= f.button :submit, class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



