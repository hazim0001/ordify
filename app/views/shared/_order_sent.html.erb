<div class="main-container-menu-item-index">

  <!-- back icon--place "Back to Menu" here -->
  <div class="back-icon">
    <%= link_to categories_path do%>
      <i class="fad fa-chevron-left text-fontawesome mr-2"></i>
      <p>Back to Menu</p>
    <% end %>
  </div>

  <!-- Just Order Summary text -->
  <div class="order-summary-text">Order Summary</div>

  <!-- this is the card for summary -->
  <% @line_items.each do |line_item| %>
    <% if line_item.quantity >= 1 %>
      <div class="card-item">
        <div class="img-container-card">
          <%= image_tag("https://images.unsplash.com/photo-1567336967319-2500ab3ce9dc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80")%>
        </div>
        <div class=" d-flex justify-content-between flex-column align-items-start p-4 h-full" style="width: 65%">
          <div class="d-flex justify-content-between w-100">
            <h2 class="px-2 w-50"><%= line_item.menu_item.title %>  x  <%= line_item.quantity %></h2>
            <h2 class="mt-auto ml-5 h-100"><%= humanized_money_with_symbol(line_item.total) %></h2>
          </div>
          <h2 class="badge badge-pill badge-primary mt-auto ml-2 animate-pulse" style="font-size:30px;">Being prepared</h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<button id="checkout-button" class="btn-call2-action btn-sticky">Pay Now</button>


<script src="https://js.stripe.com/v3/"></script>

<script>
  const payment = document.getElementById('checkout-button');
  payment.addEventListener('click', () => {
    const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
    stripe.redirectToCheckout({
      sessionId: '<%= @order.checkout_session_id %>'
    });
  });
</script>

